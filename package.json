{
    "name": "rebekahandross.github.io",
    "version": "1.1.0",
    "description": "Rebekah Pool and Ross Brandon's Wedding",
    "homepage": "https://rebekahandross.github.io",
    "private": true,
    "dependencies": {
        "bootstrap": "^4.6.1",
        "prop-types": "^15.7.2",
        "react": "^16.14.0",
        "react-anchor-link-smooth-scroll": "^1.0.12",
        "react-animated-css": "^1.2.1",
        "react-countdown-now": "^2.1.2",
        "react-dom": "^16.14.0",
        "react-fontawesome": "^1.7.1",
        "react-owl-carousel": "^2.3.3",
        "react-particles-js": "^2.7.1",
        "react-router-dom": "^5.3.0",
        "react-scripts": "3.1.1",
        "react-slick": "^0.25.2",
        "react-sticky-header": "^0.2.0",
        "reactjs-countdown": "0.0.8",
        "reactstrap": "^8.10.1",
        "simple-react-lightbox": "^3.6.8",
        "slick-carousel": "^1.8.1"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-jest": "^24.7.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-package-json": "^0.1.4",
        "eslint-plugin-react": "^7.27.1",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "gh-pages": "^3.2.3",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.4",
        "prettier": "^2.5.0"
    },
    "scripts": {
        "start": "react-scripts --openssl-legacy-provider start",
        "build": "react-scripts --openssl-legacy-provider build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --check **/**/*.{js,css,json,md}",
        "format:fix": "prettier --write **/**/*.{js,css,json,md}",
        "predeploy": "npm run build",
        "deploy": "gh-pages -d build"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{css,scss,json,md,html}": [
            "npm run format:fix"
        ],
        "*.{js,jsx}": [
            "npm run format:fix",
            "npm run lint:fix"
        ]
    }
}
